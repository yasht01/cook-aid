<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function() {
        'use strict'

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.validation-required')
        var limited = []
        for (let i = 0; i <= 10; i++) {
            const dom = document.querySelectorAll(`.validation-required-limit-${i}`);
            if (dom.length) {
                limited.push({
                    dom,
                    limit: i
                });
            }
        }
        for (let i = 0; i < limited.length; i++) {
            Array.prototype.slice.call(limited[i].dom)
                .forEach(function(form) {
                    form.addEventListener('submit', function(event) {
                        const input_file = form.querySelector('input[type=file');
                        input_file.setCustomValidity("");
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        if (input_file.files.length > limited[i].limit) {
                            input_file.setCustomValidity("Too Many Files")
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        }
        // Loop over them and prevent submission
        Array.prototype.slice.call(forms)
            .forEach(function(form) {
                form.addEventListener('submit', function(event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
    })()
</script>

